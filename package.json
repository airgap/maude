{
  "name": "maude",
  "private": true,
  "description": "A desktop AI assistant powered by Claude",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/airgap/maude"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:server": "bun run --filter @maude/server dev",
    "dev:client": "bun run --filter @maude/client dev",
    "build": "bun run --filter '*' build",
    "build:desktop": "bun run --filter @maude/client build && bun run --filter @maude/server build:binary && bun run suffix-binary",
    "suffix-binary": "scripts/suffix-binary.sh",
    "tauri:dev": "cd src-tauri && cargo tauri dev",
    "tauri:build": "cd src-tauri && cargo tauri build",
    "start": "bun run --filter @maude/client build && bun run --filter @maude/server start",
    "check": "bun run --filter '*' check",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1"
  }
}
