    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "@maude/shared": "workspace:*",
    "nanoid": "^5.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  }
}
