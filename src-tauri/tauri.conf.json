{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Maude",
  "version": "0.1.0",
  "identifier": "com.maude.app",
  "build": {
    "frontendDist": "../packages/client/build",
    "beforeDevCommand": "bun run build:desktop",
    "beforeBuildCommand": "bun run build:desktop"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/maude-server"]
  },
  "app": {
    "windows": [
      {
        "title": "Maude",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3002; style-src 'self' 'unsafe-inline'"
    }
  }
}
